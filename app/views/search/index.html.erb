<h2>Number of Members: <%= @searchfacade.nation_members_count %></h2>

<div>
  <% @searchfacade.nation_members.each do |member| %>
    <%= member.name %>
    <% if !member.photourl == nil %>
      <%= image_tag member.photourl, width: "75", height: "100" %>
    <% else %>
      <p>No Image Available</p>
    <% end %>
    <% if !member.allies.empty? %>
      <% member.allies.each do |ally| %>
        <%= ally %>
      <% end %>
    <% else %>
        <%= "None" %>
    <% end %>
    <% if !member.enemies.empty? %>
      <% member.enemies.each do |enemy| %>
        <%= enemy %>
      <% end %>
    <% else %>
        <%= "None" %>
    <% end %>
    <%= member.affiliation %>
    <br>
  <% end %>
</div>